.message{ :class => message.read ? 'read' : 'unread' }
  .profile-picture
    = image_tag profile_picture_url( message.bid.bidder.id.to_s )
  .message-content
    .subject= "#{message.subject} from #{message.bid.bidder.name}"
    %div= "Sent #{ format_date_time( message.created_at ) }"
    %div= truncate( message.body, :length => 70 )
  .message-controls
    .button= link_to 'Show Bid', auction_bid_path(message.bid.auction.id, message.bid.id), :class => 'show-bid button'
    .button= link_to 'Delete Message', '#',  :class => 'delete-message button'
    
